 <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-5 pb-2 mb-3 border-bottom">
    <h1 class="h2"><%= @user.username.titlecase%>'s Expenses</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
      <div class="btn-group mr-2">
        <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'New Expense', new_expense_path %></button>
        <button type="button" class="btn btn-sm btn-outline-secondary">Share</button>
        <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
      </div>
      <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
        <span data-feather="calendar"></span>
        This week
      </button>
    </div>
  </div>
  <div class="table-responsive">
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th>Expense Date</th>
          <th>Truck</th>
          <th>Chemicals</th>
          <th>Conservation</th>
          <th>Depreciation</th>
          <th>Employees</th>
          <th>Feed</th>
          <th>Freight</th>
          <th>Gas</th>
          <th>Insurance</th>
          <th>Interest</th>
          <th>Mortgage</th>
          <th>Rent</th>
          <th>Repais</th>
          <th>Seeds</th>
          <th>Storage</th>
          <th>Supplies</th>
          <th>Taxes</th>
          <th>Vet</th>
          <th>Tools</th>
          <th>Fencing land</th>
          <th>Calf</th>
          <th>Dues</th>
          <th>Misc labor</th>
          <th>Professional fees</th>
          <th>User</th>
          <th>Field name</th>
          <th>Cow tag</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% current_user.expenses.each do |expense| %>
          <tr>
            <td><%= expense.expense_name %></td>
            <td><%= expense.truck %></td>
            <td><%= expense.chemicals %></td>
            <td><%= expense.conservation %></td>
            <td><%= expense.depreciation %></td>
            <td><%= expense.employees %></td>
            <td><%= expense.feed %></td>
            <td><%= expense.freight %></td>
            <td><%= expense.gas %></td>
            <td><%= expense.insurance %></td>
            <td><%= expense.interest %></td>
            <td><%= expense.mortgage %></td>
            <td><%= expense.rent %></td>
            <td><%= expense.repais %></td>
            <td><%= expense.seeds %></td>
            <td><%= expense.storage %></td>
            <td><%= expense.supplies %></td>
            <td><%= expense.taxes %></td>
            <td><%= expense.vet %></td>
            <td><%= expense.tools %></td>
            <td><%= expense.fencing_land %></td>
            <td><%= expense.calf %></td>
            <td><%= expense.dues %></td>
            <td><%= expense.misc_labor %></td>
            <td><%= expense.professional_fees %></td>
            <td><%= expense.user_id %></td>
            <td><%= expense.field_id %></td>
            <td><%= expense.cow_id %></td>
            <td><%= link_to 'Show', expense %></td>
            <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
            <td><%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</main>
</div>
</div>
<br>
<%= link_to 'New Expense', new_expense_path %>
