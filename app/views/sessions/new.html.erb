<%= form_for @user, url: login_path, method: :post do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <%= collection_select(:user, :username, User.all, :username, :username, prompt: "Please select your username from this dropdown") %>
  <%= f.label :password %>
  <%= f.password_field :password, :id => "password_confirmation" %>
  <%= f.submit "Sign In" %>
  Or <%= link_to(controller: 'users', action: 'new') { 'sign up' } %>
<% end %>