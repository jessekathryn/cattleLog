<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-5 pb-2 mb-3 border-bottom">
    <h1 class="h2">Field <%= @field.id%> <%= @field.field_name.titlecase%>  </h1>
    <div class="btn-toolbar mb-2 mb-md-0">
      <div class="btn-group mr-2">
        <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'New Field', new_field_path %></button>
        <button type="button" class="btn btn-sm btn-outline-secondary">Share</button>
        <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
      </div>
      <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
        <span data-feather="calendar"></span>
        This week
      </button>
    </div>
  </div>
  <p id="notice"><%= notice %></p>
  <% current_user.fields.each do |field| %>
    <div class="col-xl-8">
      <div class="card mb-5">
        <div class="card-header"><i class="fas fa-chart-bar mr-1"></i>Field is <%= field.acreage %> acres and located at the coordinates (<%= field.latitude %>, <%= field.longitude %>). </div>
        <iframe width="800" height="900" align="center" frameborder="2" style="border:0" src="https://www.google.com/maps/embed/v1/view?key=AIzaSyDyTi3j0kAbYveFAqOA_pc7NLCMWn4HI6k&center=<%= field.latitude %>,<%=field.longitude %>&zoom=18&maptype=satellite"
          <% end %> 
          <div id="map-canvas"></div>
      </iframe>
    </div>
  </div>
</div>
</div>
</br>
