<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-5 pb-2 mb-3 border-bottom">
    <h1 class="h2"><%= @user.username.titlecase%>'s Reports</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
      <div class="btn-group mr-2">
        <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'New Report', new_user_report_path %></button>
        <button type="button" class="btn btn-sm btn-outline-secondary">Share</button>
        <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
      </div>
      <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
        <span data-feather="calendar"></span>
        This week
      </button>
    </div>
  </div>
  <%= form_with(model: report, local: true) do |form| %>
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>
    <div class="field">
      <%= form.label :date %>
      <%= form.text_field :date %>
    </div>
    <div class="field">
      <%= form.label :content%>
      <%= form.text_field :content %>
    </div>
    <div class="field">
      <%= form.hidden_field :user_id, :value => @user.id %>
      <%= form.label :Fields_included %>
      <%= form.collection_check_boxes :field_id, current_user.fields.all, :id, :field_name %>
      <div class="field">
        <%= form.hidden_field :user_id, :value => @user.id %>
        <%= form.label :Report_for_cows%>
        <%= form.collection_check_boxes :cow_id, current_user.cows.all, :id, :name %>
        <br>
        <div class="actions">
          <button class="btn btn-primary" type="submit">Save</button>
        </div>
      <% end %>
