<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-5 pb-2 mb-3 border-bottom">
    <h1 class="h2"><%= @user.username.titlecase%>'s Equipment</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
      <div class="btn-group mr-2">
        <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'New Tool', new_user_tool_path %></button>
        <button type="button" class="btn btn-sm btn-outline-secondary">Share</button>
        <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
      </div>
      <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
        <span data-feather="calendar"></span>
        This week
      </button>
    </div>
  </div>
  <div class="table-responsive">
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Tune Up Date</th>
          <th>Field ID</th>
          <th>Fuel Level</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% current_user.tools.each do |tool| %>
          <tr>
            <td><%= tool.name %></td>
            <td><%= tool.price %></td>
            <td><%= tool.tune_up %></td>
            <td><%= tool.field_ids %></td>
            <td><%= tool.fuel %></td>
            <td><%= link_to 'Show', tool_path(@user) %></td>
            <td><%= link_to 'Edit', edit_user_path(@user) %></td>
            <td><%= link_to 'Destroy', tool, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</main>
</div>
</div>
<br>
<%= link_to 'New Tool', new_tool_path %>
