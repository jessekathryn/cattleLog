<p id="notice"><%= notice %></p>

<h1>Cows</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Tag number</th>
      <th>Cow status</th>
      <th>Age</th>
      <th>Birthdate</th>
      <th>Weight</th>
      <th>Health</th>
      <th>Color</th>
      <th>User</th>
      <th>Notes</th>
      <th>Field name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cows.each do |cow| %>
      <tr>
        <td><%= cow.name %></td>
        <td><%= cow.tag_number %></td>
        <td><%= cow.cow_status %></td>
        <td><%= cow.age %></td>
        <td><%= cow.birthdate %></td>
        <td><%= cow.weight %></td>
        <td><%= cow.health %></td>
        <td><%= cow.color %></td>
        <td><%= cow.user_id %></td>
        <td><%= cow.notes %></td>
        <td><%= cow.field_name %></td>
        <td><%= link_to 'Show', cow %></td>
        <td><%= link_to 'Edit', edit_cow_path(cow) %></td>
        <td><%= link_to 'Destroy', cow, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

