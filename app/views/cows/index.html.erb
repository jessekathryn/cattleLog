<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-5 pb-2 mb-3 border-bottom"> 
      <h1 class="h2"><%= @user.username.titlecase%>'s Herd</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
          <div class="btn-group mr-2">

          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'New Cow', new_user_cow_path(@user) %></button>
            <button type="button" class="btn btn-sm btn-outline-secondary">Share</button>
            <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
          </div>

          <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
            <span data-feather="calendar"></span>
            This week
          </button>
        </div>
      </div>
    <div class="table-responsive">
    <table class="table table-striped table-sm">
    <thead>
      <tr>
      <th>Name</th>
      <th>Tag Number</th>
      <th>Cow Status</th>
      <th>Age (Years)</th>
      <th>Birth Year</th>
      <th>Weight</th>
      <th>Health</th>
      <th>Color</th>
      <th>Notes</th>
      <th>Field Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
     <% current_user.cows.each do |cow| %>
      <tr>
        <td><%= cow.name %></td>
        <td><%= cow.tag_number %></td>
        <td><%= cow.status %></td>
        <td><%= cow.age %></td>
        <td><%= cow.birthdate %></td>
        <td><%= cow.weight %></td>
        <td><%= cow.health %></td>
        <td><%= cow.color %></td>
        <td><%= cow.notes %></td>
        <td><%= cow.field_name %></td>
        <td><%= link_to 'Show', cow %></td>
        <td><%= link_to 'Edit', edit_cow_path(cow) %></td>
        <td><%= link_to 'Destroy', cow_path(:id => cow.id), method: :delete%></td>
        </tr>
        <% end %>
              </tbody>
            </table>
          </div>
        </main>
      </div>
    </div>
  <br>
